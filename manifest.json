{
	"name": "Emoji Box",
	"version": "0.1.0",
	"manifest_version": 2,
	"description": "Open from the context menu, input unicode char from left click icon, input text name from left click icon.",
	"icons": {
		"16": "16.png",
		"48": "48.png",
		"128": "128.png"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"background": {
        "scripts": ["menu.js"]
    },
	"web_accessible_resources": [
		"36x36/*.png"
	],
	"content_scripts": [{
		"js": ["emoji.js", "typography.js", "sfu.js", "view.js"],
		"css": ["style.css"],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_start"
	}]
}